{
  "name": "fantasy-cards",
  "version": "1.0.0",
  "description": "simple fantasy card store",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && npx tsc",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "preserve": "npm run build",
    "serve": "concurrently \"tsc -w\" \"nodemon dist/index.js\" ",
    "test": "jest --forceExit --detectOpenHandles  --watchAll --maxWorkers=1",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vincentpalomo/fantasy-cards.git"
  },
  "keywords": [
    "pern",
    "ts"
  ],
  "author": "Vincent Palomo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vincentpalomo/fantasy-cards/issues"
  },
  "homepage": "https://github.com/vincentpalomo/fantasy-cards#readme",
  "dependencies": {
    "concurrently": "^7.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "http-errors": "^2.0.0",
    "jest": "^29.5.0",
    "pg": "^8.10.0",
    "rimraf": "^4.4.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/http-errors": "^2.0.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.10",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "nodemon": "^2.0.22"
  }
}
